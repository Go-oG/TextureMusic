<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="地区:"
        android:textSize="16sp" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/allmv_tag_area"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        app:tabIndicatorHeight="0dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/important_red"
        app:tabTextColor="@color/general_hightgray_night">

    </com.google.android.material.tabs.TabLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="类型:"
        android:textSize="16sp" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/allmv_tag_type"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        app:tabIndicatorHeight="0dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/important_red"
        app:tabTextColor="@color/general_hightgray_night">

    </com.google.android.material.tabs.TabLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="排序:"
        android:textSize="16sp" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/allmv_tag_aesc"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        app:tabIndicatorHeight="0dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/important_red"
        app:tabTextColor="@color/general_hightgray_night">

    </com.google.android.material.tabs.TabLayout>

    <Button
        android:id="@+id/allmv_tag_commit_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#fff"
        android:text="完成"
        android:textColor="@color/important_red"
        android:textSize="16sp" />


</LinearLayout>