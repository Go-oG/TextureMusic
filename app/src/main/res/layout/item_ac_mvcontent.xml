<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/ac_mvcontent_item_relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ac_mvcontent_item_img"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"/>

    <ImageView
        android:id="@+id/ac_mvcontent_item_suport_img"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_ac_mvcontent_supportlike"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_toEndOf="@id/ac_mvcontent_item_img"
        android:layout_toStartOf="@id/ac_mvcontent_item_suport_img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ac_mvcontent_item_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:maxEms="10"
            android:maxLines="1"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/ac_mvcontent_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:maxEms="10"
            android:maxLines="1"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/ac_mvcontent_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:textSize="16sp"
            />

    </LinearLayout>

</RelativeLayout>