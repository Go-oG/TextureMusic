<?xml version="1.0" encoding="utf-8"?><!--精品歌单activity的item-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ac_quality_list_item_relative"
    android:layout_width="match_parent"
    android:layout_height="112dp"
    android:scrollbars="vertical">

    <ImageView
        android:id="@+id/ac_quality_list_item_img"
        android:layout_width="112dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/ac_quality_list_item_img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ac_quality_list_item_listname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/ac_quality_list_item_creatername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/ac_quality_list_item_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textSize="12sp" />

    </LinearLayout>

</RelativeLayout>