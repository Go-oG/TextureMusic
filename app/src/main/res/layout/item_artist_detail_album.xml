<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_item"
    android:layout_width="match_parent"
    android:layout_height="56dp">

    <ImageView
        android:id="@+id/album_img"
        android:layout_width="64dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:scaleType="centerCrop"
        android:gravity="center"
        android:transitionName="@string/sharealbumdetail" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/album_img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/artist_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="196dp"
            android:textColor="?attr/item_text_main_color" />

        <TextView
            android:id="@+id/album_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxWidth="196dp"
            android:textColor="?attr/item_text_sub_color" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/album_img"
        android:background="?attr/item_driver_color" />

</RelativeLayout>