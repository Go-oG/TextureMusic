<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_main"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/songcontent_collection_relative"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/songcontent_oneimg"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_horizontal"
            android:maxHeight="32dp"
            android:maxWidth="32dp"
            android:src="@drawable/ic_collection"
            android:tint="#ffffff" />

        <TextView
            android:id="@+id/songcontent_collection_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:maxEms="8"
            android:maxLines="1"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:text="0"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/songcontent_msg_relative"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/songcontent_twoimg"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_horizontal"
            android:maxHeight="32dp"
            android:maxWidth="32dp"
            android:src="@drawable/ic_vector_play_msg"
            android:tint="#ffffff" />

        <TextView
            android:id="@+id/songcontent_msgtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:maxEms="6"
            android:maxLines="1"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:text="0"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/songcontent_share_relative"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/songcontent_threeimg"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_horizontal"
            android:maxHeight="32dp"
            android:maxWidth="32dp"
            android:src="@drawable/ic_share"
            android:tint="#ffffff" />

        <TextView
            android:id="@+id/songcontent_sharenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:maxEms="6"
            android:maxLines="1"
            android:text="0"
            android:textColor="#ffffff"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/songcontent_download_relative"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/songcontent_fourimg"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_horizontal"
            android:maxHeight="32dp"
            android:maxWidth="32dp"
            android:src="@drawable/ic_vector_music_download"
            android:tint="#ffffff" />

        <TextView
            android:id="@+id/songcontent_downloadtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:maxEms="6"
            android:maxLines="1"
            android:text="下载"
            android:textColor="#ffffff"
            android:textSize="12sp" />
    </LinearLayout>


</LinearLayout>