<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_head_img"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/item_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/user_head_img"
            android:maxLines="1"
            android:textColor="?attr/item_text_main_color"
            android:textSize="15sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:textColor="?attr/item_text_sub_color"
        android:textSize="15sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/m_recycleview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:nestedScrollingEnabled="false" />

    <RelativeLayout
        android:id="@+id/item_music_item"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginStart="52dp">

        <ImageView
            android:id="@+id/item_music_tv"
            android:layout_width="36dp"
            android:layout_height="36dp" />

        <TextView
            android:id="@+id/item_music_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/item_music_tv"
            android:textColor="?attr/item_text_sub_color" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="52dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_mark_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_marking_12"
            android:textColor="?attr/item_text_sub_color" />

        <TextView
            android:id="@+id/item_comment_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_msg_12"
            android:textColor="?attr/item_text_sub_color" />

        <TextView
            android:id="@+id/item_share_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_share_12"
            android:textColor="?attr/item_text_sub_color" />

    </LinearLayout>

</LinearLayout>