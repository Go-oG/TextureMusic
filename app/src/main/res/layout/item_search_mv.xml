<?xml version="1.0" encoding="utf-8"?><!--searchfragment Mvitem-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_mv_item"
    android:layout_width="match_parent"
    android:layout_height="64dp">

    <FrameLayout
        android:id="@+id/item_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/item_mv_img"
            android:layout_width="112dp"
            android:layout_height="56dp"
            android:layout_marginStart="8dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/item_mv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginEnd="4dp"
            android:drawableStart="@drawable/ic_textdrawable_phone"
            android:gravity="end"
            android:textColor="?attr/item_drawable_tint_color"
            android:textSize="11sp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/item_frame"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_mv_mvname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="?attr/item_text_main_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_mv_artist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:maxLines="1"
            android:textColor="?attr/item_text_sub_color"
            android:textSize="13sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/item_frame"
        android:background="?attr/item_driver_color" />

</RelativeLayout>