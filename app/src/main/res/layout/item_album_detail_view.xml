<?xml version="1.0" encoding="utf-8"?><!--专辑详情界面中的顶部布局-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_main"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ac_album_detail_coverimg"
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:layout_marginStart="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/ac_album_detail_coverimg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ac_album_detaiL_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="卡拉偶客 第八期"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/ac_album_detail_artist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:maxLines="1"
                android:text="歌手群星"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/ac_album_detail_creater_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:text="发行时间 2017.10.4"
                android:textSize="15sp" />

        </LinearLayout>

    </RelativeLayout>

    <include
        layout="@layout/common_playlist_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

</LinearLayout>