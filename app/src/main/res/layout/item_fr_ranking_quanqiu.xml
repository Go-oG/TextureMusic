<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fr_ranking_qq_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fr_ranking_qq_rec_item_frame"
        android:layout_width="match_parent"
        android:layout_height="128dp">

        <ImageView
            android:id="@+id/fr_ranking_qq_rec_item_img"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/fr_ranking_qq_rec_item_update_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="104dp"
            android:maxEms="8"
            android:maxLines="1"
            android:textColor="@color/weak_white"
            android:textSize="13sp" />
    </FrameLayout>

    <TextView
        android:id="@+id/fr_ranking_qq_rec_item_introduce_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        android:maxEms="7"
        android:maxLines="2"
        android:textColor="?attr/text_main_color"
        android:textSize="13sp" />

</LinearLayout>