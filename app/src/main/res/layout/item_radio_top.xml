<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fr_radio_top_item"
    android:layout_width="match_parent"
    android:layout_height="84dp">

    <LinearLayout
        android:id="@+id/index_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fr_radio_top_item_index"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="?attr/item_text_sub_color" />

        <TextView
            android:id="@+id/sort_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="11sp"
            android:textColor="?attr/item_text_sub_color"
            android:maxLines="1" />

    </LinearLayout>

    <ImageView
        android:id="@+id/fr_radio_top_item_coverimg"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/index_linear" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/fr_radio_top_item_coverimg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fr_radio_top_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="?attr/item_text_main_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/fr_radio_top_item_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:maxLines="1"
            android:textColor="?attr/item_text_sub_color"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/fr_radio_top_item_hotscroe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:drawableStart="@drawable/ic_huoyan_textdrawable"
            android:maxLines="1"
            android:textColor="?attr/item_text_sub_color"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/fr_radio_top_item_coverimg"
        android:background="?attr/item_driver_color" />


</RelativeLayout>