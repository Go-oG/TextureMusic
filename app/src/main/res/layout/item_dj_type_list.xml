<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_item"
    android:layout_width="match_parent"
    android:layout_height="129dp">

    <ImageView
        android:id="@+id/item_img"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_alignParentBottom="true"
        android:scaleType="centerCrop"
        android:transitionName="@string/sharedjdetail" />

    <TextView
        android:id="@+id/dj_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/item_img"
        android:maxLines="1"
        android:textColor="?attr/item_text_main_color"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/dj_desc_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dj_name_tv"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/item_img"
        android:maxLines="1"
        android:textColor="?attr/item_text_sub_color"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/dj_info_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dj_desc_tv"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/item_img"
        android:textColor="?attr/item_text_sub_color"
        android:maxLines="1"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/item_img"
        android:background="?attr/item_driver_color" />


</RelativeLayout>